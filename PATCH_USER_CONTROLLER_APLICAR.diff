+        }

+        // Salvar ou atualizar
+        $user->pessoaJuridica()->updateOrCreate(
+            ['user_id' => $user->id],
+            $pessoaJuridicaData
+        );

+        Log::info('Pessoa Jurídica salva com sucesso', [
+            'user_id' => $user->id,
+            'cnpj' => $pessoaJuridicaData['cnpj'] ?? null
+        ]);
+    }
